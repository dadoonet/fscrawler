{
  "template": {
    "settings": {
      "analysis": {
        "analyzer": {
          "fscrawler_path": {
            "tokenizer": "fscrawler_path",
            "char_filter": [ "windows_separator" ]
          }
        },
        "char_filter": {
          "windows_separator": {
            "type": "mapping",
            "mappings": [
              "\\\\ => /"
            ]
          }
        },
        "tokenizer": {
          "fscrawler_path": {
            "type": "path_hierarchy"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "path": {
          "properties": {
            "real": {
              "type": "keyword",
              "fields": {
                "tree": {
                  "type": "text",
                  "analyzer": "fscrawler_path",
                  "fielddata": true
                },
                "fulltext": {
                  "type": "text"
                }
              }
            },
            "root": {
              "type": "keyword"
            },
            "virtual": {
              "type": "keyword",
              "fields": {
                "tree": {
                  "type": "text",
                  "analyzer": "fscrawler_path",
                  "fielddata": true
                },
                "fulltext": {
                  "type": "text"
                }
              }
            }
          }
        }
      }
    }
  }
}
