{
  "name": "test",
  "fs": {
    "url": "/path/to/docs",
    "update_rate": "5m",
    "includes": [
      "*.doc",
      "*.xls"
    ],
    "excludes": [
      "resume.doc"
    ],
    "filters": [
      ".*foo.*",
      "^4\\d{3}([\\ \\-]?)\\d{4}\\1\\d{4}\\1\\d{4}$"
    ],
    "json_support": true,
    "add_as_inner_object": true,
    "xml_support": true,
    "follow_symlinks": true,
    "remove_deleted": false,
    "continue_on_error": true,
    "ignore_above": "512mb",
    "filename_as_id": true,
    "index_content": false,
    "add_filesize": false,
    "attributes_support": true,
    "lang_detect": true,
    "store_source": true,
    "indexed_chars": "10000.0",
    "raw_metadata": true,
    "checksum": "MD5",
    "index_folders": false,
    "tika_config_path": "/path/to/tika-config.xml",
    "ocr": {
      "enabled": false,
      "language": "fra",
      "path": "/path/to/tesseract/if/not/available/in/PATH",
      "data_path": "/path/to/tesseract/tessdata/if/needed",
      "output_type": "txt",
      "pdf_strategy": "auto",
      "page_seg_mode": 1,
      "preserve_interword_spacing": true
    }
  },
  "tags": {
    "meta_filename": "meta_tags.json",
    "static_meta_filename": "/path/to/metadatafile.yml"
  },
  "server": {
    "hostname": "localhost",
    "port": 22,
    "username": "dadoonet",
    "password": "password",
    "protocol": "ssh",
    "pem_path": "/path/to/pemfile"
  },
  "elasticsearch": {
    "nodes": [
      {
        "url": "https://127.0.0.1:9200"
      },
      {
        "url": "https://127.0.0.1:9201"
      }
    ],
    "index": "test_docs",
    "index_folder": "test_folder",
    "bulk_size": 1000,
    "flush_interval": "5s",
    "byte_size": "10mb",
    "api_key": "VnVhQ2ZHY0JDZGJrUW0tZTVhT3g6dWkybHAyYXhUTm1zeWFrdzl0dk5udw==",
    "username": "elastic",
    "password": "password",
    "ca_certificate": "/path/to/ca.crt",
    "pipeline": "my_pipeline",
    "push_templates": "true",
    "semantic_search": "true"
  },
  "rest": {
    "url": "http://127.0.0.1:8080/fscrawler",
    "enable_cors": true
  }
}
