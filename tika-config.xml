<?xml version="1.0" encoding="UTF-8"?>
<properties>
    <parsers>
        <!-- Default Parser for most things, except for 2 mime types, and never
             use the Executable Parser -->
        <parser class="org.apache.tika.parser.DefaultParser">
            <mime-exclude>image/jpeg</mime-exclude>
            <mime-exclude>application/pdf</mime-exclude>
            <mime-exclude>application/x-font-ttf</mime-exclude>
            <mime-exclude>application/x-font-ttc</mime-exclude>
            <mime-exclude>application/x-font-otf</mime-exclude>
            <parser-exclude class="org.apache.tika.parser.executable.ExecutableParser"/>
            <parser-exclude class="org.apache.tika.parser.ocr.TesseractOCRParser"/>
        </parser>
        <parser class="org.apache.tika.parser.font.OTParser">
            <mime>application/x-font-ttf</mime>
            <!--<mime>application/x-font-ttc</mime>-->
            <mime>application/x-font-otf</mime>
            <enableAutoSpace>false</enableAutoSpace>
        </parser>
        <parser class="org.apache.tika.parser.pdf">
            <mime>application/pdf</mime>
            <ocrStrategy>no_ocr</ocrStrategy>
            <!-- Enable only if Tesseract is installed and enabled ( means not excluded) above -->
            <!-- <ocrStrategy>ocr_and_text</ocrStrategy> -->
        </parser>
    </parsers>
</properties>